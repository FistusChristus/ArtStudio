@page "/cart"
@using ArtStudio.Component
@using MudBlazor
<div class="mt-5">
    <MudGrid Spacing="1">
        @for (int i = 0; i < 3; i++)
        {
            <MudItem xs=6 sm=3 Class="card_block">
                <NavLink href="content/video/22/22">
                    <MudCard Class="scale-in-center">
                        <MudCardMedia Image="/img/SimplePhoto.jpg" Height="200" />
                        <MudCardContent>
                            <MudText Color="MudBlazor.Color.Dark" Typo="Typo.h5">Old Paint</MudText>
                            <MudText Color="MudBlazor.Color.Dark" Typo="Typo.body2">Old paint found on a stone house door.</MudText>
                            <MudText Color="MudBlazor.Color.Dark" Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Default" />
                        </MudCardActions>
                    </MudCard>
                </NavLink>
            </MudItem>
        }

    </MudGrid>
</div>
